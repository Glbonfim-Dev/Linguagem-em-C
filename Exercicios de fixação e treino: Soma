#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{

setlocale (LC_ALL, "portuguese");
int a,b,c,d,soma;

printf("A operação desejada é soma, informe os numeros, que deseja somar: \n");
printf("Digite um numero: ");
scanf("%d", &a);
printf("Digite um numero: ");
scanf("%d", &b);
printf("Digite um numero: ");
scanf("%d", &c);
printf("Digite um numero: ");
scanf("%d", &d);

soma = a + b + c + d;

printf(" O resultado é: %d", soma);

    return 0;
}
