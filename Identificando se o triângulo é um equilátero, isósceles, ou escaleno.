#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{

setlocale(LC_ALL, "portuguese");

 int lado1,lado2,lado3;

printf("lado1: \n");
scanf("%d", &lado1);
printf("lado2: \n");
scanf("%d", &lado2);
printf("lado3: \n");
scanf("%d", &lado3);

if (lado1==lado2&&lado2==lado3){
    printf("O triângulo é um equilatero. \n");
}
else if (lado1==lado2||lado1==lado3||lado2==lado3){
    printf("O triângulo é um isósceles. \n");
}
else{
    printf("O triângulo é um escaleno.\n");
}
    return 0;
}

