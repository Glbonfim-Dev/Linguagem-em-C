#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
  setlocale (LC_ALL, "portuguese");
  int numero;

  printf("Numéro, impar ou par!!! \n");
  printf("Digite um número: \n");
  scanf("%d", &numero);

 if (numero % 2==0){
    printf("O número é par: %d", numero);
 }
 else {
    printf("O número é impar: %d", numero);
 }
    return 0;
}
